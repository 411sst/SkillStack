{
  "name": "edutoolkit",
  "version": "1.0.0",
  "description": "Educational Toolbox App for students",
  "main": "main.js",
  "scripts": {
    "start": "cross-env NODE_ENV=development concurrently \"cross-env BROWSER=none react-scripts start\" \"wait-on http://localhost:3000 && electron .\"",
    "react-start": "cross-env NODE_ENV=development react-scripts start",
    "electron-start": "cross-env NODE_ENV=development electron .",
    "package": "cross-env NODE_ENV=production electron-forge package",
    "make": "cross-env NODE_ENV=production electron-forge make",
    "publish": "cross-env NODE_ENV=production electron-forge publish",
    "lint": "eslint src --ext js,jsx"
  },
  "keywords": [
    "education",
    "tools",
    "converter",
    "simulator",
    "learning"
  ],
  "author": "Your Name",
  "license": "MIT",
  "devDependencies": {
    "@babel/core": "^7.21.4",
    "@babel/preset-env": "^7.21.4",
    "@babel/preset-react": "^7.18.6",
    "@electron-forge/cli": "^6.4.2",
    "@electron-forge/maker-deb": "^6.4.2",
    "@electron-forge/maker-rpm": "^6.4.2",
    "@electron-forge/maker-squirrel": "^6.4.2",
    "@electron-forge/maker-zip": "^6.4.2",
    "@electron-forge/plugin-auto-unpack-natives": "^6.4.2",
    "babel-loader": "^9.1.2",
    "concurrently": "^9.1.2",
    "cross-env": "^7.0.3",
    "css-loader": "^6.7.3",
    "electron": "^24.1.2",
    "electron-is-dev": "^3.0.1",
    "eslint": "^8.38.0",
    "eslint-plugin-react": "^7.32.2",
    "file-loader": "^6.2.0",
    "react-scripts": "^5.0.1",
    "style-loader": "^3.3.2",
    "wait-on": "^8.0.3",
    "webpack": "^5.80.0",
    "webpack-cli": "^5.0.1"
  },
  "dependencies": {
    "@chakra-ui/icons": "^2.0.18",
    "@chakra-ui/react": "^2.5.5",
    "@emotion/react": "^11.10.6",
    "@emotion/styled": "^11.10.6",
    "cloudconvert": "^2.3.7",
    "electron-squirrel-startup": "^1.0.1",
    "electron-store": "^8.1.0",
    "framer-motion": "^10.12.4",
    "jszip": "^3.10.1",
    "mammoth": "^1.5.1",
    "pdf-lib": "^1.17.1",
    "pptxgenjs": "^3.12.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-icons": "^4.8.0",
    "react-router-dom": "^6.10.0"
  },
  "config": {
    "forge": {
      "packagerConfig": {},
      "makers": [
        {
          "name": "@electron-forge/maker-squirrel",
          "config": {
            "name": "EduToolkit"
          }
        },
        {
          "name": "@electron-forge/maker-zip",
          "platforms": [
            "darwin"
          ]
        },
        {
          "name": "@electron-forge/maker-deb",
          "config": {}
        },
        {
          "name": "@electron-forge/maker-rpm",
          "config": {}
        }
      ]
    }
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
